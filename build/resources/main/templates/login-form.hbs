{{> header.hbs }}

<h2>Login if you already have an account:</h2>

{{#errorMsg}}
  <p style="font-weight: bold; color: red;">{{errorMsg}}</p>
{{/errorMsg}}

<form method="post" action="authenticate">
    <p><label>Username:</label><input type="text" name="uname"> </p>
    <p><label>Password:</label><input type="password" name="password"></p>
    <p><button type="submit">Login</button></p>
</form>

<a href="/signUp">If you do not have an account, click here to sign up!</a>

{{> footer.hbs }}
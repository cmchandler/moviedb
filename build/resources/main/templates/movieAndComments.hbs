{{header}}

<h1>Movie and comments: </h1>

<table>
    <tr>
        <th>Time Stamp</th>
        <th>Movie Name</th>
        <th>Rating</th>
        <th>Critic's Username</th>
        <th>Review_id</th>
    </tr>
    {{#movies}}
        <tr>
            <th>{{post_date}}</th>
            <th>{{movie}} </th>
            <th>{{rating}}</th>
            <th>{{critic}}</th>
            <th>{{review_id}}</th>
        </tr>

    {{/movies}}
</table>

<table>
    <tr>
        <th>Comment_id</th>
        <th>Author</th>
        <th>Comment</th>
        <th>Post Date</th>
    </tr>
    {{#comments}}
        <tr>
            <th>{{comment_id}}</th>
            <th>{{author}}</th>
            <th>{{content}}</th>
            <th>{{post_date}}</th>
        </tr>
    {{/comments}}
</table>


{{#errorMsg}}
    <p style="font-weight: bold; color: red;">{{errorMsg}}</p>
{{/errorMsg}}


<h1>Add a comment: </h1>
<form method="post" action="addComment">
    <p><label>Enter your comment:</label><input type="text" name="comment"> </p>
    <p><label>Enter the review_id:</label><input type="text" name="review_id"> </p>
    <p><button type="submit">Submit</button></p>
</form>



{{footer}}
{{> header.hbs }}

<h2>Post a new review:</h2>

{{#errorMsg}}
  <p style="font-weight: bold; color: red;">{{errorMsg}}</p>
{{/errorMsg}}

<form method="post" action="/critic/postNewReview">
    <p><label>Movie name:</label><input type="text" name="movieName"> </p>
    <p><label>Rating:</label>
        <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
      </select> </p>

    <p><label>Enter review here:</label></p>
      <textarea name="review" rows="10" cols="60">
      </textarea>
    <br>
    <label for="myfile">Upload an image file:</label>
    <br>
    <input type="file" id="myfile" name="myfile"/>

    <br>
    <p><button type="submit">Submit</button></p>
</form>

{{> footer.hbs }}